const KEY = "nThnW9GcB5riehngC4yFezer15UfSXNaW2tyt1pL";
const res = await fetch(`https://api.nasa.gov/planetary/apod?api_key=${KEY}`);
const NASA = await res.json();
---

<div class="relative w-full">
  <img src={NASA.url} alt={NASA.title} class="w-full object-cover" />
  <div
    class="absolute inset-0 flex flex-col items-center justify-center text-center text-white bg-black bg-opacity-50 p-4"
  >
    <h1 class="text-4xl font-bold mb-4">{NASA.title}</h1>
    <p class="text-lg">{NASA.explanation}</p>
  </div>
</div>
